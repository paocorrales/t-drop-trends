  keywords = {Atmospheric dynamics,Climate change},
  file = {/home/paola/Zotero/storage/KAHBRH7F/Chemke - 2022 - The future poleward shift of Southern Hemisphere summer mid-latitude storm tracks stems from ocean c.pdf}
}

