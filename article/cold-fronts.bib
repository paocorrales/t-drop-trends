@article{Blazquez2018,
  title = {Fronts and Precipitation in {{CMIP5}} Models for the Austral Winter of the {{Southern Hemisphere}}},
  author = {Blázquez, Josefina and Solman, Silvina A.},
  date = {2018-04-01},
  journaltitle = {Climate Dynamics},
